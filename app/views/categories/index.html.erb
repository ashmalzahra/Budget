<%= render "shared/nav" %>

<div class="categories">
  <% if @categories.empty? %>
  <div class="get-started">
    <h3 class="started">Get Started</h3>
    <span class="div">Add your first budget by clicking on the button below</span>
  </div>
  <% else %>

  <div class="categories-container">
    <% @categories.each do |category| %>
      <div class="category-card">
        <div class="category-icon">
          <%= image_tag category.icon, alt: 'icon', class: "icon" %>
        </div>
        <div class="card-text">
          <div class="top-card">
            <%= link_to category_path(category.id), style: "text-decoration: none;" do %>
              <p class="category-name"><%= category.name %></p>
            <% end %>
            <p class="amount">$<%= category.expenses.sum(:amount) %></p>
          </div>
          <div class="bottom-card">
            <p class="date"><%= category.created_at.strftime('%d %B, %Y') %></p>
            <p class="user">by <%= current_user.name %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  </div>
  <div class="fixed-button">
  <div class="text-center link-to">
    <%= link_to 'Add New Category'.html_safe, new_category_path, class: "butt btn-success button-link" %>
  </div>
</div>
</div>

