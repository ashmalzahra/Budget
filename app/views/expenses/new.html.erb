<%= render "shared/nav" %>

<h3 class="title">Add a new transaction</h3>

<div class="form-container">
  <%= form_with model: @expense, url: category_expenses_path, local: true do |f| %>
    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
    <%= f.number_field :amount, autofocus: true, placeholder: "Amount", class: "form-control" %>
    <div class="checkbox-btn">
      <%= f.label :category_ids, "Select one or more categories:" %>
      <div class="checkboxes">
        <%= f.collection_check_boxes :category_ids, current_user.categories, :id, :name do |b| %>
          <div class="form-control">
            <%= b.check_box %>
            <%= b.label %>
          </div>
        <% end %>
      </div>
      
      <%= f.submit "Save", class: "btn btn-primary sign-up" %>
    </div>
  <% end %>
</div>